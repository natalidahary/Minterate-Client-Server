<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:layout_marginStart="80dp"
    android:layout_marginTop="250dp"
    android:background="@drawable/security_options_bg">


    <TextView
        android:id="@+id/nav_changePassword"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_above="@id/nav_changeMobile"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="6dp"
        android:drawablePadding="5dp"
        android:fontFamily="@font/js"
        android:padding="0dp"
        android:text="Change password"
        style="@style/TextSizeMedium" />

    <TextView
        android:id="@+id/nav_changeMobile"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="28dp"
        android:drawablePadding="5dp"
        android:fontFamily="@font/js"
        android:padding="0dp"
        android:text="Change mobile"
        style="@style/TextSizeMedium" />

</RelativeLayout>